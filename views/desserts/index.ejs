<% include ../partials/header %>
    <div class="jumbotron jumbotronIndex">
        <h1>Welcome to the Desserts Social Network</h1>
        <h2>Share your tasty treats with us!</h2> 
        <br>
        <a href="/desserts/new" class="btn btn-success btn-lg"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Dessert</a>
        <br> <br>
        <a href="/" id="back"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Back </a> 
    </div>
    <div class="container indexContainer" style="margin-bottom:10em;">
        <div class="dessertsFlexBox flex-container">
            <% desserts.forEach(function(dessert) { %>
            <div class="dessertsFlexItem thumbnail flex-item"> 
                <img class="dessertsThumbnailImg img-thumbnail" alt="pic of this dessert" src="<%= dessert.image %>">
                    <div class="caption text-center"><h3><%= dessert.name %></h3> </div>
                        <div class="dessertsInfoBtn"> <a href="/desserts/<%= dessert._id %>" class="btn btn-info"><span class="glyphicon glyphicon-option-horizontal" aria-hidden="true"></span></a> </div>
                        <br>
            </div>
            <% }); %>
        </div>
    </div>
<% include ../partials/footer %>