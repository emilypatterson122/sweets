<% include ../partials/header %>
    <div class="container">
        <div class="row">
            <div class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                <div>
                    <h2 id="createNewCommentLabel">Add New Comment to <%= reqBody.name %></h2>
                    <hr>
                    <form action="/desserts/<%= reqBody._id %>/comments" method="POST" name="myForm">
                        <input class="form-control" type="text" name="newCommentText" placeholder="Text">
                        <br/>
                        <p> From: <%= user.username %> </p>
                        <br/>
                        <button type="submit" class="btn btn-primary form-control">Submit!</button>
                    </form>
                    <br /> <a href="/desserts/<%= reqBody._id %>"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Back</a></div>
            </div>
        </div>
    </div>
<% include ../partials/footer %>